import java.util.Scanner;

public class WeeklyTaxCalculator {

    Scanner input = new Scanner(System.in);   // ERROR: scanner outside main

    public static void main(String[] args) {

        System.out.print("Enter weekly income: ");
        double income = input.nextDouble();   // ERROR: input not visible inside static method

        if (income < 2500)
            double taxRate = 0.20;            // ERROR: cannot declare inside if without braces
        else
            taxRate = .30;                    // ERROR: taxRate not declared

        taxWithheld = income * taxRate;       // ERROR: both variables undeclared
   
        System.out.println(taxWithheld); 
    }
}
